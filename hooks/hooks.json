{
  "description": "Ruby development hooks for linting, formatting, testing, and security scanning",
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "bash \"$CLAUDE_PLUGIN_ROOT/hooks/scripts/ruby-hooks.sh\"",
            "timeout": 120
          }
        ]
      }
    ]
  }
}
